@model Team5Project.Models.Branch_Admin

@{
    ViewBag.Title = "SuccessfulAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h3 style="color:black"><marquee><strong>YOU CAN APPROVE REQUESTS HERE!!!!</strong></marquee> </h3>

@using (Html.BeginForm("SuccessfulAdmin", "Login", FormMethod.Post))
{
    <table border="1">
        <tr>
            <td style="color:white;">CUSTOMERID</td>
            <td style="color:white;">CUSTOMER NAME</td>
            <td style="color:white;">DOB</td>
            <td style="color:white;">ADDRESS</td>
            <td style="color:white;">MAILID</td>
            <td style="color:white;">PHONE</td>
            <td style="color:white;">OCCUPATION</td>
            <td style="color:white;">STATUS</td>
        </tr>
        @foreach (var i in ViewBag.clist as IList<Team5Project.Models.Customer_Profile>)
        {

            <tr>
                <td style="color:darkblue">@i.Customer_id</td>
                <td style="color:darkblue">@i.Customer_name</td>
                <td style="color:darkblue">@i.Date_of_Birth</td>
                <td style="color:darkblue">@i.Address</td>
                <td style="color:darkblue">@i.Mail_id</td>
                <td style="color:darkblue">@i.Phone</td>
                <td style="color:darkblue">@i.Occupation</td>
                <td style="color:darkblue">@i.Status</td>
                <td style="color:darkblue">@Html.CheckBox("chckbox", new { @value = i.Customer_id })</td>


            </tr>
        }


    </table>

    <table border="1">
        <tr>
            <td style="color:white;">BRANCH ID</td>
            <td style="color:white;">BRANCH LOCATION</td>
            <td style="color:white;">ADDRESS</td>
            <td style="color:white;">MAIL ID</td>
            <td style="color:white;">PHONE</td>
            <td style="color:white;">STATUS</td>


        </tr>
        @foreach (var i in ViewBag.blist as IList<Team5Project.Models.Branch_Admin>)
        {

            <tr>
                <td style="color:darkblue">@i.Branch_id</td>
                <td style="color:darkblue">@i.Branch_Location</td>
                <td style="color:darkblue">@i.Address</td>
                <td style="color:darkblue">@i.Mail_id</td>
                <td style="color:darkblue">@i.Phone</td>
                <td style="color:darkblue">@i.Status</td>
                <td style="color:darkblue">@Html.CheckBox("chckbox1", new { @value = i.Branch_id })</td>

            </tr>

        }
    <tr>
        <td><input type="submit" value="APPROVE" name="Submit" class="btn-success"/></td>
        <td><input type="submit" value="REJECT" name="Submit"  class="btn-danger"/></td>
    </tr>
        
    

    </table>





}
