@model Team5Project.Models.Branch_Vehicle_Request
@{
    ViewBag.Title = "AdminApprovesBA";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("RequestApprove", "Login"))
{
    <table>
        <tr>
            <td>AS ON DATE</td>
            <td>@Html.TextBoxFor(a => a.As_On_Date, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>VEHICLE ID</td>
            <td>@Html.TextBoxFor(a => a.Vehicle_id, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>BRANCH ID</td>
            <td>@Html.TextBoxFor(a => a.Branch_id, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>STATUS</td>
            <td>@Html.TextBoxFor(a => a.Status, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>NO OF VEHICLES REQUESTED</td>
            <td>@Html.TextBoxFor(a => a.No_Of_Vehicles_Requested, new { @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>ENTER NO OF VEHICLES TO APPROVE</td>
            <td>@Html.TextBox("txtnovA")</td>
        </tr>
        <tr>
            <td><input type="submit" value="APPROVE" /></td>
        </tr>


    </table>


}


